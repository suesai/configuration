[core]
	editor = nvim
	pager = delta
	ignoreCase = false
	excludesFile = /etc/gitignore

[user]
	email = suesaiup@qq.com
	name = suesai

[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	lg = log --graph --pretty=format:'%C(green)%h%Creset -%C(cyan bold)%d%Creset %s - %C(blue)%cn%Creset %C(red)(%cd)%Creset' --abbrev-commit --date=format:'%Y-%m-%d %H:%M:%S'
	type = cat-file -t
	dump = cat-file -p

[interactive]
	diffFilter = delta --color-only --features=interactive

[delta]
	navigate = true
	dark = true
	line-numbers = true
	side-by-side = true
	paging = always
	features = decorations
	true-color = always

[delta "interactive"]
	keep-plus-minus-markers = false

[delta "decorations"]
	file-style = omit
	hunk-header-style = file line-number syntax

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
	tool = delta

[pull]
	rebase = true

[apply]
	whitespace = fix

[grep]
	lineNumber = true

[branch]
	defaultBranch = main

[color]
	ui = true

[rebase]
	autoStash = true

[fetch]
	prune = true
	output = compact

[help]
	autocorrect = prompt

[push]
	autoSetupRemote = true
	autoSetupRemove = true
